<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JAMA.contactme">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout
            Padding = "20"
            Spacing = "20">
            <Label Text="Contact Me"
                   HorizontalOptions="CenterAndExpand"
                   FontSize = "20"
                   FontAttributes = "Bold"
                   TextColor = "White"/>
            <BoxView BackgroundColor = "ForestGreen"
                     HeightRequest = "50"
                     WidthRequest = "150"/>
            <Entry Placeholder = "Name"/>
            
            <Entry Placeholder = "E-Mail"/>

                <Label Text = "Please Enter Your Message on the Line Below"
                       FontSize = "12"
                       TextColor = "Gray"/>
                
                <Entry Placeholder = ""/>
                
                <Button Text = "Send/Submit"
                        BackgroundColor = "Purple"
                        TextColor = "White"
                        Clicked = "Button_Clicked_ContactMe"/>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>